{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.cjs",
      "**/*.mjs",
      "**/*.json",
      "!**/node_modules/**/*"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "none"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "rules": {
      "recommended": true,
      "nursery": {
        "noFloatingPromises": {
          "fix": "safe",
          "level": "error",
          "options": {}
        }
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "useDateNow": {
          "level": "error",
          "fix": "safe",
          "options": {}
        }
      },
      "correctness": {
        "noUnusedImports": {
          "level": "error",
          "fix": "safe",
          "options": {}
        },
        "noUnusedVariables": "error"
      },
      "style": {
        "useBlockStatements": {
          "level": "error",
          "fix": "safe",
          "options": {}
        }
      },
      "suspicious": {
        "useAwait": "error"
      }
    }
  }
}
